// ※문제 인식 및 분석
//   직사각형의 넓이 = 가로 * 세로
//	 직사각형의 둘레 = (가로 + 세로) *2

public class Test011
{
	public static void main(String[] args)
	{
		// 주요 변수 선언
		int w = 10, h = 20;
		int area, length;

		// 연산 및 처리
		area = w * h;
		length = (w + h)  * 2;

		// 결과 출력
		System.out.println("직사각형의 넓이 : " + area);
		System.out.println("직사각형의 둘레 : " + length);

	}
}
// 실행 결과
/*
넓이 : 200
둘레 : 60
